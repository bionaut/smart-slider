@import 'nib'


// colors

mainColor = #139afe
shadowColor = #8f989b


.slider-wrapper
	relative top left
	width 100%
	margin 30px 0px
	clearfix()
	box-sizing: border-box
	user-select none
	font-family Helvetica
	
	.subtract, .add
		relative top left
		float left
		width 5%
		height 20px
		line-height 20px
		background mainColor
		z-index: 110
		cursor: pointer
		border-radius 2px
		&:hover
			transform scale(1.1)
		&:active
			animation pulse2 .2s ease
		
	.subtract:after
		absolute top left
		content '-'
		text-align center
		font-size 18px
		width 100%
		color white
	
	.add:after
		absolute top left
		content '+'
		text-align center
		font-size 18px
		width 100%
		color white

	.bar-wrapper
		relative top left
		float left
		width 60%
		height 20px
		box-shadow: 0px 1px 3px -2px shadowColor
		
		
		.limits, .breakpoints
			absolute top left
			width 100%
			height 20px
			margin-top -20px
			font-size 10px
			color shadowColor
			.limit, .breakpoint
				absolute top left
				height 45px
				width auto
				transform translateX(-50%)
				cursor: pointer
				padding 0px 10px
				&:hover
					animation bounce .6s ease
				&:before
					content ''
					absolute top 40px left 50%
					height 5px
					width 1px
					background shadowColor
				&:after
					content ''
					absolute top 15px left 50%
					height 5px
					width 1px
					background shadowColor
				&:last-child
					transform translateX(10%)
					font-weight: 800
					padding 0px 0px
					&:hover
						animation none
					&:before, &:after
						opacity: 0
		.handle
			absolute top 0px left
			height 20px
			width 10%
			background mainColor
			cursor: pointer
			transform translateX(-50%)
			padding 0px 0px
			border-radius 2px
			z-index: 100
			&:after
				content ''
				absolute top left 50%
				width 1px
				height 100%
				background white
			.handletooltip
				absolute top 30px left
				width 200px
				font-size 10px
				height auto
				transform translateX(-81px)
				background mainColor
				text-align center
				border-radius: 20px
				padding 2px 0px
				color white
				box-shadow 0px 0px 2px 0px #8e8e8e
				transform-origin 50% 50%
				&.ng-hide-remove.ng-hide-remove-active
					animation bounceIn .4s ease
				&.ng-hide
					opacity 0
				
				// transition transform .2s ease
				// &:before
					// content ''
					// absolute top -2px left 50%
					// width 5px
					// height 5px
					// background mainColor
					// transform rotateZ(45deg) translateX(-50%)
									
		
		.active-bar
			relative top left
			height 100%
			width 0%
			background url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAADCAYAAABWKLW/AAAAGklEQVQIW2NkQAKMIHbLyWP/a8ytGMEcGAAASr0EBDrfj/8AAAAASUVORK5CYII=')
			box-shadow: 0 0 1px -0.5px shadowColor
	

	.amountInput
		relative top left
		margin-left 0px
		width 16%
		line-height 20px
		text-align center
		float left
		padding 0
		box-shadow: 0px 1px 3px -2px shadowColor
		border none
		



@keyframes bounceIn {
  0% {
    opacity: 0;
    transform: scale(.3) translateX(-81px);
  }

  50% {
    opacity: 1;
    transform: scale(1.05) translateX(-81px);
  }

  70% {
    transform: scale(.9) translateX(-81px);
  }

  100% {
    opacity: 1;
    transform: scale(1) translateX(-81px);
  }
}





@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0) translateX(-50%);
  }

  40% {
    transform: translateY(-5px) translateX(-50%);
  }

  60% {
    transform: translateY(-2px) translateX(-50%);
  }
}


@keyframes pulse {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(2.2);
  }

  100% {
    transform: scale(2);
  }
}

@keyframes pulse2 {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.5);
  }

  100% {
    transform: scale(1);
  }
}
